<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AboutAppActivity">
    <include
        android:id="@+id/toolbar_about"
        layout="@layout/tool_bar">
    </include>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/cardView4"
        android:layout_below="@+id/toolbar_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CardView">
        <LinearLayout
            android:orientation="horizontal"
            style="@style/CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rview1"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/git_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/git"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/git_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source Code"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/facebook_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/facebook"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/facebook_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/web_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/website"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/web_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:textColor="#000000"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_below="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/CardView">
        <RelativeLayout
            style="@style/CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:id="@+id/developed"
                android:layout_centerHorizontal="true"
                android:text="@string/developed_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.ActionBar.TabText"
                android:textSize="@dimen/prb_symbolic_tick_default_text_size" />
            <TextView
                android:id="@+id/developed1"
                android:layout_below="@+id/developed"
                android:layout_centerHorizontal="true"
                android:text="Arpit Gogia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.ActionBar.TabText"
                android:textSize="@dimen/prb_symbolic_tick_default_text_size" />
            <TextView
                android:layout_below="@+id/developed1"
                android:layout_centerHorizontal="true"
                android:text="PARTH GUPTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.ActionBar.TabText"
                android:textSize="@dimen/prb_symbolic_tick_default_text_size" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
